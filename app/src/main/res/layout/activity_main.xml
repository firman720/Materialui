<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D8D8D8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--Hedaer-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:orientation="vertical"
                    android:background="#000896">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/foto"
                            android:layout_marginTop="60dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/user" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/foto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vulan Marthadina"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hallo..."
                            android:textColor="#ffffff"
                            android:gravity="center"
                            />
                    </LinearLayout>

                </LinearLayout>

                <!--body-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="522dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="25dp"
                        android:orientation="horizontal">
                        <!---->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="12dp"
                                app:contentPadding="10dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/shipped" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Delivery"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!---->
                        <!---->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="12dp"
                                app:contentPadding="10dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/box" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Pickup"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!---->
                        <!---->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="12dp"
                                app:contentPadding="10dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/order" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="Orders"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!---->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="43dp"
                        android:layout_marginRight="43dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Big Promo"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="8dp"
                            app:contentPadding="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/gbr1"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/free_shipping_120px" />

                                <TextView
                                    android:id="@+id/txt1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_toRightOf="@+id/gbr1"
                                    android:text="Free Delivery"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt1"
                                    android:layout_marginLeft="15dp"
                                    android:layout_toRightOf="@+id/gbr1"
                                    android:text="Free Delivery up to 25%"
                                    android:textColor="#A0A0A0"
                                    android:textSize="12sp"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="8dp"
                            app:contentPadding="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/gbr2"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/voucher_120px" />

                                <TextView
                                    android:id="@+id/txt2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_toRightOf="@+id/gbr2"
                                    android:text="Voucher Disc 10%"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt2"
                                    android:layout_marginLeft="15dp"
                                    android:layout_toRightOf="@+id/gbr2"
                                    android:text="Get shopping coupons for all  types of goods."
                                    android:textColor="#A0A0A0"
                                    android:textSize="12sp"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="8dp"
                            app:contentPadding="15dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/gbr3"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/online_store_120px" />

                                <TextView
                                    android:id="@+id/txt3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_toRightOf="@+id/gbr3"
                                    android:text="Open Store, Free"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt3"
                                    android:layout_marginLeft="15dp"
                                    android:layout_toRightOf="@+id/gbr3"
                                    android:text="Join by opening your store"
                                    android:textColor="#A0A0A0"
                                    android:textSize="12sp"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>